<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="sap.ui.demo.walkthrough.controller.InvoiceList">

    <List headerText="{i18n>invoiceListTitle}" class="sapUiResponsiveMargin" width="auto" items="{invoice>/Invoices}">
        <items>
            <ObjectListItem title="{invoice>Quantity} x {invoice>ProductName}" number="{
                    path: 'invoice>ExtendedPrice',
                    type: 'sap.ui.model.type.Currency',
                    formatOptions: {
                        showMeasure: true
                    }
                }" icon="{path: 'invoice>Icon'}" intro="{​= (${​invoice>ExtendedPrice/0}​ * ${​invoice>Quantity}​).toFixed(2)}​ {​invoice>ExtendedPrice/1}​" numberState="{= ${invoice>ExtendedPrice/0} > 50 ? 'Warning' : 'Success' }" class="invoice" />
        </items>
    </List>
</mvc:View>